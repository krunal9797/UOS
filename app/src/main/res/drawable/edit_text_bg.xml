<!-- rectangle_with_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF" /> <!-- Adjust color as needed -->

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#A3A3A3" />

    <!-- Corner radius -->
    <corners android:radius="5dp" /> <!-- Adjust corner radius as needed -->

</shape>
